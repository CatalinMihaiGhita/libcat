#pragma once

namespace cat {

class unit
{
public:
    template <typename T>
    explicit unit(const T&) {}

    unit() = default;

    unit(const unit&) = default;
    unit& operator=(const unit&) = default;
    
};

constexpr bool operator<(const unit&, const unit&) noexcept { return false; }
constexpr bool operator>(const unit&, const unit&) noexcept { return false; }
constexpr bool operator<=(const unit&, const unit&) noexcept { return true; }
constexpr bool operator>=(const unit&, const unit&) noexcept { return true; }
constexpr bool operator==(const unit&, const unit&) noexcept { return true; }
constexpr bool operator!=(const unit&, const unit&) noexcept { return false; }

inline constexpr unit empty{};

}
